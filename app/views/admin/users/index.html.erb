<div class="container">
<h1>登録者一覧</h1>
<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col"><%= t("activerecord.attributes.user.id") %></th>
      <th scope="col"><%= t("activerecord.attributes.user.username") %></th>
      <th scope="col"><%= t("activerecord.attributes.user.created_at") %></th>
      <th scope="col"><%= t("activerecord.attributes.user.updated_at") %></th>
      <th scope="col">その他</th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.created_at %></td>
        <td><%= user.updated_at %></td>
        <td><%= link_to '削除', user_path(user.id), method: :delete, data: { confirm:"削除してもよろしいですか？" }, class: 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @user %>
</div>