<h1><%= "#{current_user.username}さんのプロフィール" %></h1>
<div class="show-user">
  <div class="user-image">
    <% if current_user.image? %>
      <%= image_tag @user.image.thumb300.url %>
    <% else %>
      <%= image_tag 'no-image-icon-23500.jpg', :size => '100x100' %>
    <% end %>
    <%= link_to "編集", edit_user_registration_path, class: 'btn p-2 m-2' if current_user %>
  </div>

  <div class="user-prof">
    <div class="user-name">
      <h2>名前</h2>
      <p><%= @user.username %></p>
    </div>
    <div class="user-introduction">
      <h2>紹介文</h2>
      <p><%= @user.profile %></p>
    </div>
</div>