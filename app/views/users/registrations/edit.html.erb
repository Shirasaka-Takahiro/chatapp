<div class="container">
  <h1>編集画面</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <div class="registration-edit">
        <div class="image">
          <% if current_user.image? %>
            <%= image_tag current_user.image.url %>
          <% else %>
            <%= image_tag 'no-image-icon-23500.jpg', :size =>'300x300' %>
          <% end %>
          <div><%= f.file_field :image, class: 'btn p-2' %></div>
        </div>

        <div class="options">
          <div class="field">
            <%= f.label t('.username') %><br />
            <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
          </div>

          <div class="field">
             <%= f.label t('.profile') %><br />
             <%= f.text_area :profile, autofocus: true, autocomplete: "profile", class: 'form-control' %>
          </div>

          <div class="field">
             <%= f.label :email %><br />
             <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <i><em>(<%= @minimum_password_length %> 文字以上)</em></i><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions btn">
            <%= f.submit t('.update') %>
          </div>

        <% end %>

        <h3>退会</h3>

        <p><%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: "本当によろしいですか？" }, method: :delete, class: 'btn' %></p>

        <%= link_to "戻る", :back %>
      </div>
  </div>
</div>